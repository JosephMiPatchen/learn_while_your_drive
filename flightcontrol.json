{
  "$schema": "https://app.flightcontrol.dev/schema.json",
  "environments": [
    {
      "id": "development",
      "name": "Development",
      "region": "us-east-1",
      "source": {
        "branch": "main"
      },
      "services": [
        {
          "id": "redwood-api",
          "name": "Redwood API",
          "type": "web",
          "buildType": "nixpacks",
          "cpu": 0.5,
          "memory": 1,
          "buildCommand": "yarn rw deploy flightcontrol api && yarn rw prisma migrate deploy && yarn rw prisma db seed",
          "startCommand": "yarn rw deploy flightcontrol api --serve",
          "port": 8911,
          "healthCheckPath": "/graphql/health",
          "ci": {
            "type": "ec2"
          },
          "envVariables": {
            "REDWOOD_WEB_URL": {
              "fromService": {
                "id": "redwood-web",
                "value": "origin"
              }
            },
            "DATABASE_URL": {
              "fromService": {
                "id": "db",
                "value": "dbConnectionString"
              }
            },
            "S3_BUCKET_NAME": "dnl-media",
            "OPENAI_MODEL": "gpt-4-turbo",
            "OPENAI_API_KEY": {
                "fromParameterStore": "OPENAI_API_KEY"
            }
          }
        },
        {
          "id": "redwood-web",
          "name": "Redwood Web",
          "type": "static",
          "buildType": "nixpacks",
          "singlePageApp": true,
          "buildCommand": "yarn rw deploy flightcontrol web",
          "outputDirectory": "web/dist",
          "ci": {
            "type": "ec2"
          },
          "envVariables": {
            "REDWOOD_API_URL": {
              "fromService": {
                "id": "redwood-api",
                "value": "origin"
              }
            }
          }
        },
        {
          "id": "db",
          "name": "Mysql",
          "type": "rds",
          "engine": "mysql",
          "engineVersion": "8",
          "instanceSize": "db.t4g.micro",
          "port": 3306,
          "storage": 20,
          "private": false
        }
      ]
    }
  ]
}